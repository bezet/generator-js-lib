{
  "name": "<%= packageName %>",
  "version": "0.1.0",
  "description": "<%= packageDescription %>",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorURL %>"
  },
  "main": "dist/<%= unscopedPackageName %>.js",
  "jsnext:main": "src/<%= unscopedPackageName %>.js",
  "module": "src/<%= unscopedPackageName %>.js",
  "scripts": {
    "demo": "gulp demo",
    "build:dev": "gulp build",
    "build:prod": "gulp build --production",
    "build": "npm run build:prod",
    "serve": "gulp serve",
    "test": "mocha --require babel-core/register",
    "link": "npm link && cd docs && npm link <%= packageName %> && cd ..",
    "install:demo": "cd docs && npm i && cd ..",
    "install:all": "npm i && npm run install:demo",
    "initialize": "npm run install:demo && npm run link",
    "start": "gulp"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.4.0",
    "browser-sync": "^2.18.13",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "mocha": "^4.0.1",
    "node-sass": "^4.7.2",
    "parallelshell": "^3.0.2",
    "run-sequence": "^2.2.0",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1",
    "webpack-stream": "^4.0.0",
    "yargs": "^10.0.3"
  },
  "keywords": [
    ""
  ],
  <% if (authorName !== '') { %>
  "homepage": "https://<%= authorName %>.github.io/<%= unscopedPackageName %>",
  "repository": "https://github.com/<%= authorName %>/<%= unscopedPackageName %>",
  <% } %>
  "license": "<%= license %>"
}
